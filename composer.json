{
    "name": "otis22/vetmanager-token",
    "description": "Project for using token auth for Vetmanager Rest API",
    "license": "MIT",
    "authors": [
        {
            "name": "otis",
            "email": "vromanichev24@gmail.com"
        }
    ],
    "require": {
        "otis22/vetmanager-url": "~0.1",
        "otis22/php-interfaces": "^1.0",
        "guzzlehttp/guzzle": "^7.1",
        "ext-json": "*",
        "elegant-bro/interfaces": "^1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.1",
        "squizlabs/php_codesniffer": "3.*",
        "phpstan/phpstan": "^0.12.19",
        "otis22/php-coverage-checker": "^1.2",
        "sensiolabs/security-checker": "^6.0",
        "wapmorgan/php-deprecation-detector": "^2.0",
        "php-coveralls/php-coveralls": "^2.4",
        "phpunit/phpcov": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "Otis22\\VetmanagerToken\\": "src"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Otis22\\VetmanagerToken\\": "tests"
        }
    },
    "scripts": {
        "unit-tests": [
            "vendor/bin/phpunit --testsuite main  && vendor/bin/php-coverage-checker build/logs/clover.xml 80"
        ],
        "integration-tests": [
            "vendor/bin/phpunit --testsuite integration"
        ],
        "static": [
            "vendor/bin/phpcs --ignore-annotations --standard=PSR12 src tests && vendor/bin/phpdd tests src && vendor/bin/phpstan analyse --level=max src tests"
        ],
        "check-composer": [
            "composer validate && vendor/bin/security-checker security:check"
        ],
        "all-tests": [
            "composer check-composer &&  composer unit-test && composer static"
        ]
    }
}
